<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/panel_header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/icon"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:gravity="top"
            android:text="@string/setting1"
            android:textAllCaps="false"
            android:textAppearance="@style/title"
            android:textColor="@color/black" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/dark_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTopText">

        <TextView
            android:id="@+id/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginTop="@dimen/layout_marginTopTextSetting"
            android:layout_marginBottom="@dimen/layout_marginBottomTextSetting"
            android:gravity="top"
            android:text="@string/dark"
            android:textAllCaps="false"
            android:textAppearance="@style/dark"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStartTextSetting1"
            android:layout_marginTop="@dimen/layout_marginTopTextSetting"
            android:layout_marginBottom="@dimen/layout_marginBottomTextSetting"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sharetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginTop="@dimen/layout_marginTopTextSetting"
            android:layout_marginBottom="@dimen/layout_marginBottomTextSetting"
            android:gravity="top"
            android:text="@string/share"
            android:textAllCaps="false"
            android:textAppearance="@style/dark"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStartTextSetting"
            android:layout_marginTop="@dimen/layout_marginTopText1"
            android:src="@drawable/ic_share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/supporttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginTop="@dimen/layout_marginTopTextSetting"
            android:layout_marginBottom="@dimen/layout_marginBottomTextSetting"
            android:gravity="top"
            android:text="@string/help"
            android:textAllCaps="false"
            android:textAppearance="@style/dark"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/icon_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStartTextSetting"
            android:layout_marginTop="@dimen/layout_marginTopText1"
            android:src="@drawable/ic_support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/user_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginTop="@dimen/layout_marginTopTextSetting"
            android:layout_marginBottom="@dimen/layout_marginBottomTextSetting"
            android:gravity="top"
            android:text="@string/user"
            android:textAllCaps="false"
            android:textAppearance="@style/dark"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_marginStartTextSetting"
            android:layout_marginTop="@dimen/layout_marginTopText1"
            android:src="@drawable/ic_user" />
    </FrameLayout>

</LinearLayout>