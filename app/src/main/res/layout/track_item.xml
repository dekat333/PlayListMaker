<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorOnPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconTrack"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/trackName"
        style="@style/dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintBottom_toTopOf="@id/authorTrack"
        app:layout_constraintStart_toEndOf="@id/iconTrack"
        app:layout_constraintTop_toTopOf="@id/iconTrack"
        tools:text="Yesterday (Remastered 2009)"

        />

    <TextView
        android:id="@+id/authorTrack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/dp_12"
        android:fontFamily="@font/ys_display_regular"
        android:singleLine="true"
        android:textColor="?attr/colorContainer"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/iconTrack"
        app:layout_constraintStart_toEndOf="@id/iconTrack"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        tools:text="The Beatles"

        />

    <TextView
        android:id="@+id/timeTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorContainer"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="@id/authorTrack"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="@id/authorTrack"
        tools:text="2:55" />

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:src="@drawable/point"
        app:layout_constraintBottom_toBottomOf="@id/authorTrack"
        app:layout_constraintStart_toEndOf="@id/authorTrack"
        app:layout_constraintTop_toTopOf="@id/authorTrack" />

    <ImageView
        android:id="@+id/ic_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:src="@drawable/ic_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>