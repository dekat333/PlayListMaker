<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/panel_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:backgroundTint="?attr/colorOnPrimary"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/setting"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="80dp"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/search"
            android:textAppearance="@style/title"
            android:textColor="?attr/colorOnSecondary" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/panel_header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_line"
            style="@style/dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/edittext"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="?attr/colorPrimaryVariant" />

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="?attr/colorOnPrimaryContainer"
            android:src="@drawable/clear"
            android:visibility="gone" />


    </FrameLayout>

    <TextView
        android:id="@+id/TextHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/dp_14"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="Вы искали"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/sp_19"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="vertical">



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/clearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/dp_24"
            android:backgroundTint="?attr/colorOnSecondary"
            android:fontFamily="@font/ys_display_medium"
            android:text="Очистить историю"
            android:textAllCaps="false"
            android:textColor="?attr/colorSecondary"
            android:textFontWeight="500"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:cornerRadius="54dp" />
    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <ImageView
            android:id="@+id/placeholders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_210"
            android:src="@drawable/nothing_search"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/no_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_210"
            android:src="@drawable/no_internet"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_346"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/nothing"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/sp_19"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextHolderNoInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_346"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/noInternet"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/sp_19"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TextHolderNoInternet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_390"
            android:layout_marginEnd="@dimen/dp_12"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/noInternet2"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/sp_19"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp_450"
            android:backgroundTint="?attr/colorOnSecondary"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/restore"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            app:cornerRadius="@dimen/dp_54"
            app:tint="?attr/colorOnSecondary" />


    </FrameLayout>

</LinearLayout>